{
  "content_security_policy": "script-src 'self' https://ru.aliexpress.com/ 'unsafe-eval'; object-src 'self'","name": "Get Image",
  "short_name": "Get Image",
  "description": "Easy way to get image on every website you need!",
  "version": "0.0.8",
  "manifest_version": 2,
  "icons": {
    "16": "images/get-image-20.png",
    "128": "images/get-image-128.png"
  },
  "background": {
    "scripts": ["moment.js", "pt-br.js", "background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "19": "images/get-image-20.png",
      "38": "images/get-image-20.png"
    },
    "default_title": "Get Image",
    "default_popup": "popup.html"
  },
  "author": "Glauro Quint√£o Juliani",
  "content_scripts": [
    {
      "js": [
        "jquery.min.js", 
        "vue.js",
        "moment.js",
        "content.js"
      ],
      "css": [
        "base.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "cookies",
    "alarms",
    "notifications",
    "background",
    "webRequest",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "bootstrap.min.css"
  ]
}
